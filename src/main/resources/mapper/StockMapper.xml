<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.myspring.utils.stock.Dao.StockDao">
    <select id="queryStock"  parameterType="map" resultType="com.demo.myspring.utils.stock.entity.Stock">
        select * from stock

        <trim prefix="where" prefixOverrides="and">
            <if test="map != null">
                <foreach collection="map.entrySet()"  index="key" item="value" >
                    and ${key}= #{value}
                </foreach>
            </if>
        </trim>

    </select>

</mapper>
